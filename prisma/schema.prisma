generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}


model Student {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  enrollment    Int    @unique
  name          String 
  phone         String @unique
  address       String
  discipline    Discipline[] @relation(fields: [disciplineIDs], references: [id])
  disciplineIDs  String[] @db.ObjectId 
}

model Discipline {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  teacher       String 
  room          Int 
  student       Student[] @relation(fields: [studentIDs], references: [id])  
  studentIDs  String[] @db.ObjectId
}